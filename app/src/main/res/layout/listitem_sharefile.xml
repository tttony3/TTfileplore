<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_selector"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingTop="0dp" >

    <ImageView
        
        android:id="@+id/im_sharefile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="5dp"
         android:scaleType="centerInside"
        android:contentDescription="@string/img_description" />

    <TextView
        android:id="@+id/tv_share_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/im_sharefile"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_share_fileurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_share_filename"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@+id/im_sharefile"
        android:ellipsize="end"
        android:ems="28"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textSize="12sp" />

</RelativeLayout>